generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int      @id @default(autoincrement())
  eventName   String
  eventDate   DateTime
  startTime   String
  endTime     String
  description String
  location    String
  tags        Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        String   @id
  userName  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
